<div class="general-container m-5">
  <h1 class="mb-5"> Restaurants' list </h1>


  <div class="row">
    <%= @restaurants.each do |restaurant| %>
      <div class="card shadow-sm mb-5 bg-body-tertiary col p-0 m-2 text-center" style="width: 18rem;">
        <%= link_to restaurant_path(restaurant) do %>
          <h2 class="card-title card-header p-0 text-decoration-none"> <%= restaurant.name %></h2>
        <% end %>
          <p class="card-text"> Adress : <%= restaurant.address %> </p>
          <p class="card-text"> Phone : <%= restaurant.phone %> </p>
          <p class="card-text"> Category : <%= restaurant.category %> </p>
      </div>
    <% end %>
  </div>
</div>



