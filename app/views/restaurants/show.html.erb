<%# Carte Restau %>
<div class="container">
  <div class="card mt-4 w-25 shadow-sm mb-4 bg-body-tertiary col p-0 m-2 text-center" style="width: 18rem;">
    <h2 class="card-title card-header pt-2"> <%= @restaurant.name %> </h2>
      <p class="card-text pt-2"> Adress : <%= @restaurant.address %> </p>
      <p class="card-text"> Phone : <%= @restaurant.phone %> </p>
      <p class="card-text pb-2"> Category : <%= @restaurant.category %> </p>
  </div>
</div>
<%# Fin carte restau %>

<%# Liste reviews %>
<div class="container">
  <div class="card w-25 shadow-sm mb-5 bg-body-tertiary col p-0 m-2 text-center" style="width: 18rem;">
    <h2 class="card-title card-header p-0"> Reviews </h2>

        <%= @restaurant.review.each do |review| %>
          <div class="card review">
            <p class="card-text"> Rating : <%= review.rating %> </p>
            <p class="card-text"> Comment : <%= review.content %> </p>
          </div>
        <% end %>

  </div>
</div>
<%# Fin liste reviews %>

<%# Add review %>
<div class="review ms-5 mb-3">
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-outline-secondary' %>
</div>
<%# Fin add review %>

<%# Retour %>
<div class="return ms-5">
  <%= link_to 'Retour Ã  la liste des restaurants', restaurants_path, class: 'btn btn-outline-secondary' %>
</div>
<%# Fin retour %>
